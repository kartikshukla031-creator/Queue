<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Queue Status</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/style.css">
</head>
<body>

<header>Live Status</header>

<div class="container">
  <h3 id="queueName"></h3>
  <h2 id="position"></h2>
  <p id="wait"></p>
</div>

<script>
  const queue = localStorage.getItem("selectedQueue");
  const data = JSON.parse(localStorage.getItem(queue)) || [];

  document.getElementById("queueName").innerText = "Queue: " + queue;
  document.getElementById("position").innerText = "Your Position: " + data.length;
  document.getElementById("wait").innerText =
    "Estimated Wait: " + (data.length * 5) + " minutes";
</script>

</body>
</html>
